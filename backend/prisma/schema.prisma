generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum BusinessIndustry {
  BeautyWellness
  RetailEcommerce
  FoodBeverage
  ProfessionalServices
  RealEstateConstruction
}

enum Tiers {
  Free
  Basic
  Premium
}

model Admin {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  isAdmin   Boolean
  password  String
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  businessId String
  password  String
}

model Business {
  id        String            @id @default(cuid())
  name      String
  industry  String
  tier      String
}

model Product {
  id        String   @id @default(uuid())
  businessId String
  name      String
  description String
  sku       String
  price     Float
  stock     Int
  category  String
  status    String
  image     String?
  updatedAt DateTime @updatedAt
}