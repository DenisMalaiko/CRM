generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum BusinessIndustry {
  BeautyWellness
  RetailEcommerce
  FoodBeverage
  ProfessionalServices
  RealEstateConstruction
}

enum Tiers {
  Free
  Basic
  Premium
}

enum OrderStatus {
  Pending
  Processing
  Shipped
  Completed
  Cancelled
}

enum PaymentsStatus {
  Unpaid
  Paid
  Refund
  Failed
}

enum PaymentMethod {
  Cash
  CreditCard
  BankTransfer
}


model Admin {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  isAdmin   Boolean
  password  String
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  businessId String
  business   Business @relation(fields: [businessId], references: [id])
  password  String
}

model Business {
  id        String            @id @default(cuid())
  name      String
  industry  BusinessIndustry
  tier      Tiers

  users     User[]
  products  Product[]
  clients   Client[]
  orders    Order[]
}

model Product {
  id        String   @id @default(uuid())
  businessId String
  name      String
  description String
  sku       String
  price     Float
  stock     Int
  reserved  Int
  category  String
  status    String
  image     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  embedding Float[] @db.Vector(1536)

  orders     Order[]
  business   Business @relation(fields: [businessId], references: [id])
}

model Client {
  id          String   @id @default(uuid())
  businessId  String
  firstName   String
  lastName    String
  email       String
  countryCode String
  phoneNumber String
  address     String
  role        String
  isActive    Boolean

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  business   Business @relation(fields: [businessId], references: [id])
  orders     Order[]
}

model Order {
  id             String           @id @default(uuid())
  quantity       Int
  total          Float
  status         OrderStatus
  productId      String
  clientId       String
  paymentStatus  PaymentsStatus
  paymentMethod  PaymentMethod
  notes          String?

  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  fulfilledAt    DateTime?

  client         Client?          @relation(fields: [clientId], references: [id])
  product        Product          @relation(fields: [productId], references: [id])
  businessId     String
  business       Business         @relation(fields: [businessId], references: [id])
}